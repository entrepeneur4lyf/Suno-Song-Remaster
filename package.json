{
  "name": "suno-song-remaster",
  "version": "1.0.0",
  "description": "AI Audio mastering app for Suno songs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "audio",
    "mastering",
    "spotify",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3"
  },
  "build": {
    "appId": "com.suno.remaster",
    "productName": "Suno Song Remaster",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "image.png",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "image.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "image.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "image.png"
    }
  }
}
